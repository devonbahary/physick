{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es5",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "declaration": true,
        "strictPropertyInitialization": true,
        "module": "commonjs",
        "sourceMap": true,
        "paths": {
            "@physick/*": ["src/*"]
        }
    },
    "include": ["./src/**/*"]
}
